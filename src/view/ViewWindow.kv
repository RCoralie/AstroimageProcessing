#:kivy 1.9.1

<ViewExplorer>
    width: 300
    BoxLayout:
        width: 300
        size_hint: (None,1)
        TabbedPanel:
            tab_pos: "top_right"
            default_tab_text: "List View"
            default_tab_content: list_view_tab

            TabbedPanelHeader:
                text: 'Icon View'
                content: icon_view_tab

            FileChooserListView:
                id: list_view_tab

            FileChooserIconView:
                id: icon_view_tab
                show_hidden: True


<ViewImage>
    BoxLayout:
        orientation: 'vertical'
        position: 'center'
        Image:
            source: "./backgroundDefault.jpg"

